{
  "manifest_version": 3,
  "name": "LinkedIDontKnowWhatToReplyAI",
  "description": "Generates suggestions using ChatGPT for LinkedIn comments.",
  "version": "0.1.0",
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "options.html",
    "default_icon": "icon.png"
  }
}
